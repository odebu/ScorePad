<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="select">
    <%= f.label :top_team_id %><br />
    <%= f.select :top_team_id, @teams.map{|t| [t.tname, t.id]} %>
  </div>

  <div class="select">
    <%= f.label :bottom_team_id %><br />
    <%= f.select :bottom_team_id, @teams.map{|t| [t.tname, t.id]} %>
  </div>

  <div class="datetime_select">
    <%= f.label :playball_datetime %><br />
    <%= f.datetime_select :playball_datetime, :minute_step => 10 %>
  </div>

  <div class="field">
    <%= f.label :stadium %><br />
    <%= f.text_field :stadium %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
